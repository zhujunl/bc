<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服"
        android:textColor="#333333"
        android:textSize="17sp"
        android:textFontWeight="700"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#379B9B9B"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tittle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cs_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:paddingBottom="10dp"
        android:visibility="gone"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:paddingBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#379B9B9B"
        app:layout_constraintBottom_toTopOf="@id/bottom"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/csImg"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:src="@mipmap/csimg"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/cs_edit"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_cs_edit"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/csImg"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/cs_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="发送"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/cs_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>