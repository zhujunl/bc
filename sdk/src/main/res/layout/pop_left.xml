<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/suspended_solids" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/point_bg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/point_gray_bg"
            >
            <TextView
                android:id="@+id/userAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13665883504"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/account_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换账号"
                android:textColor="#5293FF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/background_auth"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <Button
                    android:id="@+id/iv_kefu"
                    style="@style/Sj_MyButton"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/point_ser_style" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <Button
                    android:id="@+id/iv_account"
                    style="@style/Sj_MyButton"
                    android:layout_width="45.0dip"
                    android:layout_height="45.0dip"
                    android:background="@drawable/point_ac_style"
                    android:layout_marginLeft="5dp"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>