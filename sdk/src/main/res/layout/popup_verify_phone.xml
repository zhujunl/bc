<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/popup_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证手机号"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/popup_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/popup_phone_hint"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:paddingLeft="15dp"
            android:background="@drawable/background_white"
            />
        <ImageView
            android:id="@+id/popup_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/removes_login"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="28dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >
        <EditText
            android:id="@+id/popup_Et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/popup_phone_code_hint"
            android:paddingLeft="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/background_white"
            />
        <ImageView
            android:id="@+id/popup_remove_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/removes_login"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/popup_Tv_code"
            android:layout_marginRight="18dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/popup_Tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/popup_submit"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:text="登录"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/background_login"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:id="@+id/popup_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有绑定手机号？"
            android:textColor="#999999"
            android:textSize="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textColor="#5293FF"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/popup_no"
            />
    </RelativeLayout>
</LinearLayout>