<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="311dp"
    android:layout_height="324dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/infinite_game_background_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/popup_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/infinite_game_login_back"
            android:layout_marginLeft="20dp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/infinite_game_logo" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/popup_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/popup_login_hint"
            android:maxLength="11"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:background="@drawable/infinite_game_background_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/popup_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/infinite_game_removes_login"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/spinnerImg"
            app:layout_constraintBottom_toBottomOf="@id/spinnerImg"
            app:layout_constraintRight_toLeftOf="@id/spinnerImg"/>
        <Button
            android:id="@+id/spinnerImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/infinite_game_dropdown"
            app:layout_constraintTop_toTopOf="@id/popup_login"
            app:layout_constraintEnd_toEndOf="@id/popup_login"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/popup_Et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/popup_code_hint"
            android:paddingLeft="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/infinite_game_background_white"
            />
        <ImageView
            android:id="@+id/popup_remove_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/infinite_game_removes_login"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/popup_Tv_code"
            android:layout_marginRight="18dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/popup_Tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            android:text="获取"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        >
        <CheckBox
            android:id="@+id/popup_Rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/infinite_game_selector_radio_check"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/agree_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="已同意"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/popup_Rb"/>
        <TextView
            android:id="@+id/popup_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="用户协议 "
            android:background="@drawable/infinite_game_text_underline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/agree_txt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="和 "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/popup_user"/>
        <TextView
            android:id="@+id/popup_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="隐私政策"
            android:layout_marginLeft="15dp"
            android:background="@drawable/infinite_game_text_underline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/popup_user"/>
        <TextView
            android:id="@+id/try_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速试玩"
            android:textSize="10dp"
            android:textColor="#FE3939"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/popup_submit"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:text="登录"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/infinite_game_background_login"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:id="@+id/popup_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？"
            android:textColor="#999999"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/popup_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="#5293FF"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/popup_no"
            />
    <TextView
            android:id="@+id/popup_loginPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textColor="#333333"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            />
    </RelativeLayout>
</LinearLayout>