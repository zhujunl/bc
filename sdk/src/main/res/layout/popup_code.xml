<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="311dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/infinite_game_background_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/popup_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/infinite_game_login_back"
            android:layout_marginLeft="20dp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/infinite_game_logo" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/popup_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/infinite_game_background_white"
            android:hint="@string/popup_login_hint"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="15dp" />
        <ImageView
            android:id="@+id/popup_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/infinite_game_removes_login"
            android:visibility="invisible"
            android:layout_marginRight="58dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/spinnerImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/infinite_game_caret_down"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/popup_Et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/popup_code_hint"
            android:paddingLeft="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/infinite_game_background_white"
            />
        <ImageView
            android:id="@+id/popup_remove_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/infinite_game_removes_login"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/popup_Tv_code"
            android:layout_marginRight="18dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/popup_Tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            android:text="获取"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="center"
        android:gravity="center">
        <CheckBox
            android:id="@+id/popup_Rb"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:button="@drawable/infinite_game_selector_radio_check"
            android:layout_marginTop="2dp" />
        <TextView
            android:id="@+id/agree_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="已同意"/>
        <TextView
            android:id="@+id/popup_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="用户协议 "
            android:background="@drawable/infinite_game_text_underline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="和 "/>
        <TextView
            android:id="@+id/popup_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="隐私政策"
            android:background="@drawable/infinite_game_text_underline"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/try_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速试玩"
                android:textSize="10dp"
                android:textColor="#FE3939"
                android:layout_gravity="right"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/popup_submit"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:text="登录"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/infinite_game_background_login"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="18dp"
        >
        <TextView
            android:id="@+id/popup_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？"
            android:textColor="#999999"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/popup_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="#5293FF"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/popup_no"
            />
    <TextView
            android:id="@+id/popup_loginPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textColor="#333333"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            />
    </RelativeLayout>
</LinearLayout>